# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=config/credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here
SHEET_NAME=Invoice_Header
LINE_ITEMS_SHEET_NAME=Line_Items

# Application Configuration
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,pdf
MAX_IMAGES_PER_INVOICE=10
TEMP_FOLDER=temp
EXPORT_FOLDER=exports

# Tier 3 - Master Data Sheets
CUSTOMER_MASTER_SHEET=Customer_Master
HSN_MASTER_SHEET=HSN_Master
DUPLICATE_ATTEMPTS_SHEET=Duplicate_Attempts

# Tier 2 Features Configuration
ENABLE_CONFIDENCE_SCORING=true
ENABLE_MANUAL_CORRECTIONS=true
ENABLE_DEDUPLICATION=true
ENABLE_AUDIT_LOGGING=false
EXTRACTION_VERSION=v1.0-tier2
CONFIDENCE_THRESHOLD_REVIEW=0.7

# Tier 3 Configuration
EXCLUDE_ERROR_INVOICES=false

# Monitoring Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_MB=10
LOG_FILE_BACKUP_COUNT=5
HEALTH_SERVER_PORT=8080
HEALTH_SERVER_ENABLED=true
METRICS_SAVE_INTERVAL=300

# Epic 4: REST API Configuration (FastAPI + Swagger + JWT)
# Set FEATURE_API_ENABLED=true to start the web API alongside the bot
FEATURE_API_ENABLED=false
API_JWT_SECRET=your_jwt_secret_here_change_in_production
API_PORT=8000
API_HOST=0.0.0.0
API_CORS_ORIGINS=http://localhost:3000
API_RATE_LIMIT_PER_MINUTE=60
API_JWT_EXPIRY_MINUTES=30
API_JWT_REFRESH_EXPIRY_DAYS=7

# Epic 2: Order Upload & Normalization
FEATURE_ORDER_UPLOAD_NORMALIZATION=false
MAX_IMAGES_PER_ORDER=10

# Epic 3: Tenant Sheet Isolation
FEATURE_TENANT_SHEET_ISOLATION=false

# Usage Tracking
ENABLE_USAGE_TRACKING=false
ENABLE_OCR_LEVEL_TRACKING=false
ENABLE_INVOICE_LEVEL_TRACKING=false
ENABLE_ORDER_TRACKING=false
ENABLE_CUSTOMER_AGGREGATION=false
